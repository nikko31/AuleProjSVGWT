<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .headerFontWidget2 {
            font-family: "source_sans_prosemibold",Arial;
            margin-top: 10px;
            font-size: 15px;
            font-weight: bold;
            color: #666666;
            display: inline;
            border: none;
        }

        .containterDistance {
            margin-top: 10px;
        }
    </ui:style>
    <g:HorizontalPanel ui:field="popupSearch" width="500" height="300" styleName="{style.containterDistance}">
        <g:VerticalPanel width="500" height="300" styleName="{style.containterDistance}">
            <g:FlexTable ui:field="searchPersonTable" cellSpacing="0" cellPadding="5"
                         styleName="{style.headerFontWidget2}"/>
        </g:VerticalPanel>
    </g:HorizontalPanel>
</ui:UiBinder>
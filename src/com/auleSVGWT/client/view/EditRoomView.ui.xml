<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:VerticalPanel>
        <g:Label>Stanza</g:Label>
        <g:Grid>
            <g:row>
                <g:customCell>
                    <g:Label>Numero Posti  :</g:Label>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="numSeatsTxt"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label>Metri Quadri  :</g:Label>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="mtQTxt"/>
                </g:customCell>
            </g:row>
        </g:Grid>

        <g:Label>Persone: </g:Label>
        <g:ScrollPanel ui:field="personScroll" pixelSize="350,350">
            <g:FlexTable cellSpacing="0" width="100%" borderWidth="1" ui:field="editPersonTable"/>
        </g:ScrollPanel>

        <g:Button ui:field="addPersonButton">Crea Nuova Persona</g:Button>

        <g:HorizontalPanel horizontalAlignment="ALIGN_CENTER">
            <g:Button ui:field="saveButton">Salva</g:Button>
            <g:Button ui:field="cancelButton">Indietro</g:Button>
        </g:HorizontalPanel>

    </g:VerticalPanel>
</ui:UiBinder>
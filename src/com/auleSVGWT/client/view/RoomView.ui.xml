<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style field="otherStyle" src="View.css"></ui:style>
    <g:VerticalPanel height="100%" width="100%" styleName="{otherStyle.distanceFromTopLeftPanel}">
        <g:Label styleName="{otherStyle.headerFontWidget3}">STANZA</g:Label>
        <g:Grid>
            <g:row>
                <g:customCell>
                    <g:Label styleName="{otherStyle.headerFontWidget2}" >Numero Aula :</g:Label>
                </g:customCell>
                <g:customCell>
                    <g:Label styleName="{otherStyle.headerFontWidget}" ui:field="roomNumber" horizontalAlignment="ALIGN_CENTER"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label styleName="{otherStyle.headerFontWidget2}">Numero Posti :</g:Label>
                </g:customCell>
                <g:customCell>
                    <g:Label styleName="{otherStyle.headerFontWidget}" ui:field="numSeats" horizontalAlignment="ALIGN_CENTER"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label styleName="{otherStyle.headerFontWidget2}">Metri Quadri :</g:Label>
                </g:customCell>
                <g:customCell>
                    <g:Label styleName="{otherStyle.headerFontWidget}" ui:field="mtQ"  horizontalAlignment="ALIGN_CENTER"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label styleName="{otherStyle.headerFontWidget2}">Prese di rete  :</g:Label>
                </g:customCell>
                <g:customCell>
                    <g:Label styleName="{otherStyle.headerFontWidget}"  ui:field="numSocket" horizontalAlignment="ALIGN_CENTER"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label styleName="{otherStyle.headerFontWidget2}">Info  :</g:Label>
                </g:customCell>
                <g:customCell>
                    <g:Label styleName="{otherStyle.headerFontWidget}" ui:field="infoTxt"  horizontalAlignment="ALIGN_CENTER"/>
                </g:customCell>
            </g:row>
        </g:Grid>

        <g:FlexTable cellSpacing="0" width="100%" borderWidth="1"  ui:field="personTable" />
        <g:Button ui:field="editButton">Modifica</g:Button>

    </g:VerticalPanel>
</ui:UiBinder>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:VerticalPanel>
        <g:Label>Stanza</g:Label>
        <g:Grid>
            <g:row>
                <g:customCell>
                    <g:Label>Numero Aula :</g:Label>
                </g:customCell>
                <g:customCell>
                    <g:Label ui:field="roomNumber"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label>Numero Posti :</g:Label>
                </g:customCell>
                <g:customCell>
                    <g:Label ui:field="numSeats"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label>Metri Quadri :</g:Label>
                </g:customCell>
                <g:customCell>
                    <g:Label ui:field="mtQ"/>
                </g:customCell>
            </g:row>
        </g:Grid>

        <g:FlexTable cellSpacing="0" width="275" borderWidth="1"  ui:field="personTable"/>
        <g:Button ui:field="editButton">Modifica</g:Button>

    </g:VerticalPanel>
</ui:UiBinder>